<%- include('elements/header'); %>

<div class="container">

  <h1 class="mb-4" style="color: #a855f7;"><%= __('New product') %></h1>
  <p><%= __('For userId:') %> <%= session.userId %></p>

  <form method="POST" enctype="multipart/form-data" action="/products/new">

    <div class="mb-3">
      <label for="nameInput" class="form-label"><%= __('Name') %></label>
      <input type="text" required name="name" class="form-control" id="nameInput">
    </div>

     <div class="mb-3">
      <label for="priceInput" class="form-label"><%= __('Price') %></label>
      <input
        type="number" required
        min="0" value="0" step=".01"
        name="price" class="form-control" id="priceInput">
    </div>

    <div class="mb-3">
      <label for="imageInput" class="form-label"><%= __('Product Image') %></label>
      <input type="file" name="image" accept="image/*" class="form-control" id="imageInput">
    </div>

    <div class="form-check">
      <input class="form-check-input" type="checkbox" name="tags" value="motor" id="checkMotor">
      <label class="form-check-label" for="checkMotor"><%= __('Motor') %></label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" name="tags" value="lifestyle" id="checkLifestyle">
      <label class="form-check-label" for="checkLifestyle"><%= __('Lifestyle') %></label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" name="tags" value="mobile" id="checkMobile">
      <label class="form-check-label" for="checkMobile"><%= __('Mobile') %></label>
    </div>
    <div class="form-check mb-4">
      <input class="form-check-input" type="checkbox" name="tags" value="work" id="checkWork">
      <label class="form-check-label" for="checkWork"><%= __('Work') %></label>
    </div>

    <button type="submit" class="btn btn-morado"><%= __('Submit') %></button>
  </form>

</div>