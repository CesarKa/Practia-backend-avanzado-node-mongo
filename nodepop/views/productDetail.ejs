<%- include('./elements/header'); %>

<div class="container">
  <% if (!session.userId) { %>
    <p>Para ver el contenido debe hacer <a href="/login">login</a></p>
  <% } %>

  <% if (session.userId) { %>
    <h1>Product Detail</h1>

    <table class="table table-bordered table-striped">
      <tbody>
        <tr>
          <th>Name</th>
          <td><%= product.name %></td>
        </tr>
        <tr>
          <th>Price</th>
          <td><%= product.price / 100 %>€</td>
        </tr>
        <tr>
          <th>Image</th>
          <td>
            <img src="products/<%= product.image %>" alt="<%= product.name %>" style="max-width: 200px; border-radius: 8px;">
          </td>
        </tr>
        <tr>
          <th>Tags</th>
          <td><%= product.tags.join(', ') %></td>
        </tr>
      </tbody>
    </table>

    <div class="mt-4">
      <a href="/products" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition">← Back to Products</a>
    </div>
  <% } %>
</div>

</body>
</html>